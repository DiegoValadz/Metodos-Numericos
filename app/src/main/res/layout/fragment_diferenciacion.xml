<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DiferenciacionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/autor_text"
            android:text="@string/name_autor"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="#FDFEFE"
            android:textStyle="italic"
            android:textSize="15sp"
            android:elevation="15dp"
            android:gravity="center_vertical"
            />


        <TextView
            android:text="Introduce los datos"
            android:textStyle="italic"
            android:textAlignment="center"
            android:background="@color/colorPrimaryLight"
            android:textColor="#FFFF"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/xi_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="Xi="/>
                <EditText
                    android:id="@+id/h_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned|numberDecimal"
                    android:hint="h="/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView

                    android:text="Grado de la ecuaciÃ³n"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_aprox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ind_txt2"
                android:visibility="gone"
                android:text="Ind="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ind_edt2"
                android:visibility="gone"
                android:layout_width="80dp"
                android:inputType="numberSigned|numberDecimal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/x_txt2"
                android:visibility="gone"
                android:text="X="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x_edt2"
                android:visibility="gone"
                android:inputType="numberSigned|numberDecimal"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/x2_txt2"
                android:visibility="gone"
                android:text="X^2="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x2_edt2"
                android:visibility="gone"
                android:layout_width="80dp"
                android:inputType="numberSigned|numberDecimal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/x3_txt2"
                android:visibility="gone"
                android:text="X^3="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x3_edt2"
                android:visibility="gone"
                android:layout_width="80dp"
                android:inputType="numberSigned|numberDecimal"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/x4_txt2"
                android:visibility="gone"
                android:text="X^4="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x4_edt2"
                android:visibility="gone"
                android:layout_width="80dp"
                android:inputType="numberSigned|numberDecimal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/x5_txt2"
                android:visibility="gone"
                android:text="X^5="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x5_edt2"
                android:visibility="gone"
                android:layout_width="80dp"
                android:inputType="numberSigned|numberDecimal"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/x6_txt2"
                android:visibility="gone"
                android:text="X^6="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x6_edt2"
                android:visibility="gone"
                android:layout_width="80dp"
                android:inputType="numberSigned|numberDecimal"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/x7_txt2"
                android:visibility="gone"
                android:text="X^7="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/x7_edt2"
                android:visibility="gone"
                android:inputType="numberSigned|numberDecimal"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />


        </LinearLayout>






    </LinearLayout>
    <Button
        android:id="@+id/btn_aprox"
        android:background="@color/colorAccent"
        android:text="Calcular"
        android:textColor="#FFF"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
</FrameLayout>